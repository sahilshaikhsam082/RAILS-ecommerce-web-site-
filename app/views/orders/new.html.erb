<!-- app/views/orders/new.html.erb -->
<div class="container mt-5">
  <h1>Checkout</h1>

  <%= form_with model: @order, local: true do |form| %>
    <div class="form-group">
      <%= form.label :address, 'Address' %>
      <%= form.text_area :address, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :province, 'Province' %>
      <%= form.text_field :province, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <p><strong>Total Price:</strong> <%= number_to_currency(@total_price) %></p>
    </div>

    <%= form.submit 'Place Order', class: 'btn btn-primary' %>
  <% end %>
</div>
