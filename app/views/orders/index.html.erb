<div class="container mt-5">
  <h1>My Orders</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Date</th>
        
        <th>User</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= order.user.email %></td>
          <td><%= number_to_currency(order.total_price) %></td>
          <td><%= link_to 'View', order_path(order), class: "btn btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
