<nav aria-label="Page navigation">
  <ul class="pagination">
    <% if collection.prev_page %>
      <li class="page-item">
        <%= link_to 'Previous', url_for(page: collection.prev_page), class: 'page-link' %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <span class="page-link">Previous</span>
      </li>
    <% end %>

    <% (1..collection.total_pages).each do |page_num| %>
      <li class="page-item <%= 'active' if page_num == collection.current_page %>">
        <%= link_to page_num, url_for(page: page_num), class: 'page-link' %>
      </li>
    <% end %>

    <% if collection.next_page %>
      <li class="page-item">
        <%= link_to 'Next', url_for(page: collection.next_page), class: 'page-link' %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <span class="page-link">Next</span>
      </li>
    <% end %>
  </ul>
</nav>
