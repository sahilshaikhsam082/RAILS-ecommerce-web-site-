<!-- app/views/products/show.html.erb -->
<div class="container mt-5">
  <div class="product-details">
    <!-- Product Image -->
    <div class="product-image">
      <% if @product.image.attached? %>
        <%= image_tag @product.image, class: 'img-fluid product-image-img' %>
      <% else %>
        <div class="no-image">
          <span>No Image</span>
        </div>
      <% end %>
    </div>

    <!-- Product Details -->
    <div class="product-info">
      <h1 class="product-name"><%= @product.name %></h1>
      <p class="product-description">
        <strong>Description:</strong> <%= @product.description %>
      </p>
      <p class="product-price">
        <strong>Price:</strong> <%= number_to_currency(@product.price) %>
      </p>
      <div class="card-footer text-center" style="display: grid;">
        <%= link_to 'Add to Cart', add_to_cart_cart_path(@product), class: 'btn btn-gradient m-2'%>
        <%= link_to link_to 'Back', products_path, class: 'btn-sm btn-success btn-action m-2' %>
      </div>
    </div>
  </div>
</div>

<!-- Include this in your stylesheet -->
<style>
  .container {
    max-width: 100%;
    margin: 0 auto;
    padding: 20px;
    background-color: #f8f9fa;
  }

  .product-details {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .product-image {
    width: 100%;
    max-width: 600px;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #ffffff;
    margin-bottom: 20px;
    overflow: hidden;
    position: relative;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .product-image-img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures image covers the area */
    border-radius: 8px;
  }

  .no-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
