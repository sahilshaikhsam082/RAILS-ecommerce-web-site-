    color: #6c757d;
    font-size: 1.2rem;
    border-radius: 8px;
  }

  .product-info {
    width: 100%;
    max-width: 600px;
    padding: 20px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  .product-name {
    margin-bottom: 20px;
    font-size: 2rem;
    color: #333333;
  }

  .product-description,
  .product-price {
    margin-bottom: 10px;
    font-size: 1.2rem;
    color: #333333;
  }

  .product-price {
